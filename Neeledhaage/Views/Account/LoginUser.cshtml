@model Neeledhaage.Models.Account.CommonviewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-sm-6" style="border-right:solid 1px #ddd;">
        <div style="margin:20px;">
            <h4>New Customers</h4>
            <hr>
            <p>Do Not Have Account ? Please Register here.</p>

            <h4>Registration Information</h4>

            @using (Html.BeginForm("create-account", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                if (TempData["RegisterSM"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["RegisterSM"]
                    </div>
                }
                <div class="form-group">
                    @Html.ValidationMessage("RegisterError", "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">First Name</label>
                        @Html.EditorFor(model => model.UserVM.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserVM.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Last Name</label>
                        @Html.EditorFor(model => model.UserVM.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserVM.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email Address</label>
                        @Html.EditorFor(model => model.UserVM.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserVM.EmailAddress, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mobile</label>
                        @Html.EditorFor(model => model.UserVM.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserVM.MobileNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.PasswordFor(model => model.UserVM.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserVM.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Confirm Password</label>
                        @Html.PasswordFor(model => model.UserVM.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserVM.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-black">Register</button>
                    </div>
                </div>
            }


        </div>
    </div>
    @*Add login*@
    <div class="col-sm-6">

        <div style="margin:20px;">

            <h4>Registered Customers ,Login Here</h4>

            @if (TempData["LoginSM"] != null)
            {
                <div class="alert alert-success">
                    @TempData["LoginSM"]
                </div>

            }
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.ValidationMessage("LoginError", "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Mobile/Email</label>
                    @Html.EditorFor(model => model.LoginUserVM.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LoginUserVM.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LoginUserVM.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.PasswordFor(model => model.LoginUserVM.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LoginUserVM.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-black pull-left">Login</button>
                    <a href="javascript:" class="forgot_pass_checkout pull-right btn" style="margin-top:20px;">Forgot Password?</a>
                </div>

            }

        </div>
    </div>
</div>
